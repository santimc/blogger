<h1>All Tags</h1>

<ul id="tags">
  <% @tag.each do |tag| %>
    <li>
      <%= link_to tag.name, tag_path(tag),
          class: 'tag_name', id: "tag_#{tag.id}" %>
      <% if logged_in? %>
        <%= link_to "delete", tag_path(tag), method: :delete,
            data: {confirm: "Really delete the tag?"}%>
      <% end %>
    </li>
  <% end %>
</ul>
<% if logged_in? %>
  <p><%= link_to "Create a New Article", new_article_path, class: "new_article" %></p>
<% end %>
<p><%= link_to "<< Back to Articles List", articles_path %></p>
